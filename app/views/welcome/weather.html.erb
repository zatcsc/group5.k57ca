<div class="span4 current-weather-content">
<% img_url = "weather/"+@data['weather'][0]['icon']+".png"  %>
<h3><%= image_tag(img_url) %> <%= @data['name']  %> </h3>

<h2><%= (@data['main']['temp']-272.5).round(2) %>Â°C</h2>
 <%= @data['weather'][0]['description'] %>
<p></p><div id="date_m"><%= Time.now %></div><p></p>

<table class="table table-striped table-bordered table-condensed">
<tbody>

<tr><td><%= @data['weather'][0]['main'] %></td><td><%= @data['clouds']['all'] %></td></tr>
<tr><td>Pressure</td><td><%= @data['main']['pressure'] %> hpa</td></tr>
<tr><td>Pressure<br> (sea level)</td><td><%= @data['main']['sea_level'] %> hpa</td></tr>	
<tr><td>Humidity</td><td><%= @data['main']['humidity'] %> %</td></tr>
<tr><td>Sunrise</td><td id="sunrise"><%= @data['sys']['sunrise'] %></td></tr>
<tr><td>Sunset</td><td id="sunset"><%= @data['sys']['sunset'] %></td></tr>
</tbody>
</table>
</div>